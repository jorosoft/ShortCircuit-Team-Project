extends ../_layout

block page-title
    title !{result.title}

block content    
    .col-md-5.col-md-offset-3        
        .panel.panel-default
            .panel-heading Профил на !{result.user} 
            .panel-body
                form(action="/profile" method='post')
                    div Име: !{result.firstName} !{result.lastName}
                    if result.isPatient
                        div ЕГН: !{result.pin}
                    else
                        div УИН: !{result.regNum}
                        div Специалност: !{result.speciality}
                        div Медицински Център: !{result.medCenter}
                        div Град: !{result.city}
                        button(id='changeInfoBtn' class="btn btn-info btn-block") Промяна