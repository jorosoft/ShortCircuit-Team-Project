extends ../_layout

block page-title
    title !{result.title}

block content    
    .col-md-4.col-md-offset-3        
        .panel.panel-default
            .panel-heading Вход
            .panel-body
                form(action="/login" method="post")
                    .form-group.input-group.input-group
                        span(class="input-group-addon" id="sizing-addon3")
                            span(class="glyphicon glyphicon-user")
                        input(type="text" class="form-control" name="username" placeholder="Потребителско име" aria-describedby="sizing-addon3")
                    .form-group.input-group.input-group
                        span(class="input-group-addon" id="sizing-addon3")
                            span(class="glyphicon glyphicon-lock") 
                        input(type="password" class="form-control" name="password" placeholder="Парола" aria-describedby="sizing-addon3")
                    .form-group
                        button(id="btnLogin" type="submit" class="btn btn-info btn-block") Вход
