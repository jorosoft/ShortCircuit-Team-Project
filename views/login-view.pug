extends _layout

block page-title
    title !{result.title}

block content    
    .col-md-4.col-md-offset-3        
        .panel.panel-default
            .panel-heading Вход
            .panel-body
                form(action="/login" method="post")
                    .form-group
                        label(class="control-label" for="signupUser") Потребителско име
                        input(id="signupUser" name="username" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="signupPassword") Парола
                        input(id="signupPassword" name="password" class="form-control" type="password")
                    .form-group
                        button(id="btnLogin" type="submit" class="btn btn-info btn-block") Вход
