extends _layout

block app-title
    title !{result.title}

block content    
    .col-md-4.col-md-offset-3        
        .panel.panel-default
            .panel-heading Login
            .panel-body
                form
                    .form-group
                        label(class="control-label" for="signupUser") Username
                        input(id="signupUser" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="signupPassword") Password
                        input(id="signupPassword" class="form-control" type="password")
                    .form-group
                        button(id="btnLogin" type="submit" class="btn btn-info btn-block") Login