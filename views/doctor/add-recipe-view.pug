extends ../_layout

block page-title
    title !{result.title}

block content
    .panel.panel-default
        .panel-heading Добавяне на рецепта
        .panel-body
            form(method="post")
                .form-group.input-group.input-group
                    span(class="input-group-addon" id="sizing-addon3")
                        span(class="glyphicon glyphicon-user")
                    input(type="text" id="pin" class="form-control" name="pin" placeholder="Име на пациента" aria-describedby="sizing-addon3")
                    input(type="text" id="content" class="form-control" name="content" placeholder="Съдържание" aria-describedby="sizing-addon3")
                include ../error-messages
                .form-group
                    button(id="btnAddPatient" class="btn btn-info btn-block") Добави
