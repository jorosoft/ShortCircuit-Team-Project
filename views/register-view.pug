extends _layout

block page-title
    title !{result.title}

block content
    .col-md-5.col-md-offset-3
        .panel.panel-default
            .panel-heading Регистрация
            .panel-body
                form(action="/register" method="post")
                    .form-group.input-group.input-group-sm                        
                        span(class="input-group-addon" id="sizing-addon3")
                        input(type="text" class="form-control" name="username" placeholder="Потребителско име" aria-describedby="sizing-addon3")
                    .form-group.input-group.input-group-sm
                        span(class="input-group-addon" id="sizing-addon3")
                        input(type="password" class="form-control" name="password" placeholder="Парола" aria-describedby="sizing-addon3")
                    .form-group.input-group.input-group-sm
                        span(class="input-group-addon" id="sizing-addon3")
                        input(type="password" class="form-control" name="passConfirmation" placeholder="Повтори парола" aria-describedby="sizing-addon3")
                    .form-group.input-group.input-group-sm
                        span Аз съм: 
                        label(class="radio-inline" for="doctor") 
                            input(id="doctor" type="radio" name="userType") 
                            span Лекар
                        label(class="radio-inline" for="patient") 
                            input(id="patient" type="radio" name="userType")
                            span Пациент 

                    #reg-wrapper

                    .form-group
                        button(id="btnRegister" type="submit" class="btn btn-info btn-block") Регистрирай

    script(src="./static/scripts/register-form.js")
