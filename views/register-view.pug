extends _layout

block page-title
    title !{result.title}

block content
    .col-md-5.col-md-offset-3
        .panel.panel-default
            .panel-heading Регистрация
            .panel-body
                form(action="/register" method="post")
                    .form-group
                        label(class="control-label" for="registerUser") Потребителско име
                        input(id="registerUser" name="username" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="registerPassword") Парола
                        input(id="registerPassword" name="password" class="form-control" type="password")
                    .form-group
                        label(class="control-label" for="repeatPassword") Повтори парола
                        input(id="repeatPassword" name="passConfirmation" class="form-control" type="password")
                    .form-group
                        button(id="btnRegister" type="submit" class="btn btn-info btn-block") Регистрирай
